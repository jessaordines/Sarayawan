<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:radius="8dp">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1128dp"
        android:layout_alignParenEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="VisualLintBounds"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="about Us"
        android:textColor="#FF000000"
        android:textSize="35pt"
        android:textSyle="bold"/>

    <TextView
        android:id="@+id/textViewVision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/alegreya_sans_sc_italic"
        android:text=""
        android:textColor="#FF000000"
        android:textSize="10dp"
        android:ignore="smallSp,TextSizeCheck,VisualLintLongText"/>


    <TextView
        android:id="@+id/textViewMissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Mission"
        android:textColor="#FF000000"
        android:textSize="24dp"
        android:textSyle="bold"/>












</FrameLayout>